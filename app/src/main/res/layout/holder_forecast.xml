<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentView"
    android:layout_width="@dimen/forecast_cell_width"
    android:layout_height="@dimen/forecast_cell_height"
    android:background="@drawable/background_bottom_line"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:fontFamily="monospace"
        android:text="00:00" />
    <ImageView
        android:id="@+id/forecastImageView"
        android:layout_width="@dimen/icon_forecast_cell_width"
        android:layout_height="@dimen/icon_forecast_cell_height"
        app:srcCompat="@drawable/icon02d" />
    <TextView
        android:id="@+id/tempTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:fontFamily="monospace"
        android:text="temp" />
    <TextView
        android:id="@+id/winTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:fontFamily="monospace"
        android:text="win" />
</LinearLayout>